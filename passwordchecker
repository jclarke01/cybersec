import string
import getpass
import re
import math

COMMON_PASSWORDS = ["password", "123456", "qwerty", "admin", "letmein", "welcome", "monkey", "1234"]

def is_common_password(password):
    return password.lower() in COMMON_PASSWORDS

def check_password_strength(password):
    common_patterns = ['123', 'abc', 'password', 'qwerty']
    if any(pattern in password.lower() for pattern in common_patterns):
        return 0, "Avoid common password patterns."

    if is_common_password(password):
        return 0, "Common password. Choose a more unique one."

    if len(password) < 8:
        return 0, "Password should be at least 8 characters long."

    character_classes = [string.ascii_lowercase, string.ascii_uppercase, string.digits, string.whitespace, string.punctuation]
    class_counts = [1 if any(char in char_class for char in password) else 0 for char_class in character_classes]

    entropy = -sum(count / len(password) * math.log2(count / len(password)) if count > 0 else 0 for count in class_counts)
    strength = min(5, max(1, round(6 - entropy)))

    remarks = {
        1: "Very Bad Password!!!",
        2: "Not A Good Password!!!",
        3: "Weak password",
        4: "Tough password, but can be better",
        5: "Very strong password"
    }

    return strength, remarks[strength]

def ask_pwd(another_pwd=False):
    valid = False
    if another_pwd:
        choice = input('Do you want to enter another password (y/n): ')
    else:
        choice = input('Do you want to check password (y/n): ')

    while not valid:
        if choice.lower() == 'y':
            return True
        elif choice.lower() == 'n':
            print('Exiting program')
            return False
        else:
            print('Invalid, Try Again')
            return False

if __name__ == '__main__':
    print('Welcome to Password Checker')
    ask_pw = ask_pwd()

    while ask_pw:
        password = getpass.getpass("Enter Password: ")
        strength, hint = check_password_strength(password)

        print(f'Password Strength: {strength}')
        print(f'Hint: {hint}')

        ask_pw = ask_pwd(True)
